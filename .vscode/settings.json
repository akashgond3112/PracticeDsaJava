{
    "java.project.sourcePaths": ["src"],
    "java.project.outputPath": "bin",
    "java.project.referencedLibraries": [
        "lib/**/*.jar"
    ],
    "java.completion.enabled": false,
    "java.autobuild.enabled": true,  // Change to true to enable parsing
    "java.server.launchMode": "Standard", // Ensure language server launches properly
    "java.format.enabled": true, // Enable formatting
    "java.debug.settings.enableRunDebugCodeLens": false, // Disable code lens
    "editor.suggest.showSnippets": false,
    "terminal.integrated.suggest.quickSuggestions": {

        "commands": "on",
        "arguments": "on",
        "unknown": "off"
    },
    "[java]": {
        "editor.suggest.selectionMode": "never",
        "editor.acceptSuggestionOnEnter": "off",
        "editor.inlineSuggest.edits.renderSideBySide": "never",
        "editor.inlineSuggest.showToolbar": "never",
        "editor.snippetSuggestions": "none",
        "editor.suggest.showClasses": false,
        "editor.suggest.showColors": false,
        "editor.suggest.showConstants": false,
        "editor.suggest.showConstructors": false,
        "editor.suggest.showCustomcolors": false,
        "editor.suggest.showDeprecated": false,
        "editor.suggest.showEnumMembers": false,
        "editor.suggest.showEnums": false,
        "editor.suggest.showEvents": false,
        "editor.suggest.showFields": false,
        "editor.suggest.showFiles": false,
        "editor.suggest.showFolders": false,
        "editor.suggest.showFunctions": false,
        "editor.suggest.showIcons": false,
        "editor.suggest.showInlineDetails": false,
        "editor.suggest.showInterfaces": false,
        "editor.suggest.showIssues": false,
        "editor.suggest.showKeywords": false,
        "editor.suggest.showMethods": false,
        "editor.suggest.showModules": false,
        "editor.suggest.showOperators": false,
        "editor.suggest.showProperties": false,
        "editor.suggest.showReferences": false,
        "editor.suggest.showSnippets": false,
        "editor.suggest.showStructs": false,
        "editor.suggest.showTypeParameters": false,
        "editor.suggest.showUnits": false,
        "editor.suggest.showUsers": false,
        "editor.suggest.showValues": false,
        "editor.suggest.showVariables": false,
        "editor.suggest.showWords": false,
        "editor.wordBasedSuggestions": "off",
        "github.copilot.editor.enableAutoCompletions": false,
        "editor.defaultFormatter": "redhat.java"
    },
    "editor.fontFamily": "'JetBrains Mono', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "java.format.settings.url": "https://raw.githubusercontent.com/redhat-developer/vscode-java/master/formatter/eclipse-formatter.xml",
    "java.format.settings.profile": "RedHat"
}
